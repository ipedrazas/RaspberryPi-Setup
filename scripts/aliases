

alias ll='ls -atrhlF'
alias ..='cd ..'
alias vi='vim'

alias i='sudo apt-get install'
alias u='sudo apt-get update'
alias ug='sudo apt-get dist-upgrade'

alias log='tail -f -n50'
alias untar='tar -xvzf'

# Aliases to load images & videos in the 2.8 TFT
alias viewvideo='mplayer -vo fbdev2:/dev/fb1 -x 240 -y 320 -framedrop'
alias viewimage='sudo fbi -T 2 -d /dev/fb1 -noverbose -a'
